{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./app/",
    "lib": [ "es2018", "dom" ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5"
  },
  "include": [
    "./scripts/vue/**/*"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
